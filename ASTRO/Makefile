# force run the Perl version
all: 
	bc-psuedo-make.pl

# files that combine magnitude values with phase values

planets: /tmp/venus.txt /tmp/halley.txt /tmp/jupiter.txt

/tmp/venus.txt: venus-brightness.txt.bz2
	bzcat venus-brightness.txt.bz2 | perl -F, -anle 'if ($$_ eq "\$$\$$SOE") {$$p=1; next;} elsif ($$_ eq "\$$\$$EOE") {$$p=0; next;} if ($$p==1) {print "$$F[0],$$F[5]"}' > /tmp/venus.txt

/tmp/halley.txt: halley-brightness.txt.bz2
	bzcat halley-brightness.txt.bz2 | perl -F, -anle 'if ($$_ eq "\$$\$$SOE") {$$p=1; next;} elsif ($$_ eq "\$$\$$EOE") {$$p=0; next;} if ($$p==1) {print "$$F[0],$$F[5]"}' > /tmp/halley.txt

